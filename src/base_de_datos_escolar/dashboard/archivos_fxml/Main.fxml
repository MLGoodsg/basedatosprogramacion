<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.AnchorPane?>
<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="base_de_datos_escolar.dashboard.clasesController.MainController">
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="10.0" style="-fx-background-color: #4C2F91;">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Smart School">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <Button onAction="#handleDashboard" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="📊  Dashboard" />
                <Button onAction="#handleStudents" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="🎓  Students" />
                <Button onAction="#handleTeachers" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="👥  Teachers" />
                <Button onAction="#handleParents" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="👨‍👩‍👧  Parents" />
                <Button onAction="#handleEvents" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="🗓️  Events" />
                <Button onAction="#handleExams" prefHeight="45.0" prefWidth="220.0" styleClass="nav-button" text="📝  Exams" />
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="centerContent" />
    </center>
</BorderPane>