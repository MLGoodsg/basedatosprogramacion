<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1054.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="base_de_datos_escolar.controldeusuarios.clasesController.MateriaHorarioController">

    <HBox layoutX="-9.0" layoutY="25.0" prefHeight="551.0" prefWidth="304.0" spacing="10">
        <VBox prefHeight="551.0" prefWidth="244.0" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <GridPane hgap="10" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>

                <Label text="Institución:" GridPane.rowIndex="0"/>
                <ComboBox fx:id="cbInstitucion" prefWidth="200" GridPane.rowIndex="1"/>

                <Label text="Periodo:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cbPeriodo" prefWidth="200" GridPane.rowIndex="3"/>

                <Label text="Docente:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbDocente" prefWidth="200" GridPane.rowIndex="5"/>

                <Label text="Curso:" GridPane.rowIndex="6"/>
                <ComboBox fx:id="cbCurso" prefWidth="200" GridPane.rowIndex="7"/>

                <Label text="Materia:" GridPane.rowIndex="8"/>
                <ComboBox fx:id="cbMateria" prefWidth="200" GridPane.rowIndex="9"/>

                <Label text="Grado:" GridPane.rowIndex="10"/>
                <ComboBox fx:id="cbGrado" prefWidth="200" GridPane.rowIndex="11"/>

                <Label text="Día:" GridPane.rowIndex="12"/>
                <ComboBox fx:id="cbDia" prefWidth="200" GridPane.rowIndex="13"/>

                <Label text="Hora:" GridPane.rowIndex="14"/>
                <ComboBox fx:id="cbHora" prefWidth="200" GridPane.rowIndex="15"/>
                <columnConstraints>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
        </VBox>
    </HBox>

    <Label layoutX="20.0" layoutY="10.0" text="Gestión de Horarios">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <TableView fx:id="tablaHorarios" layoutX="214.0" layoutY="75.0" prefHeight="450.0" prefWidth="825.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID"/>
            <TableColumn fx:id="colInstitucion" prefWidth="150" text="Institución"/>
            <TableColumn fx:id="colDocente" prefWidth="150" text="Docente"/>
            <TableColumn fx:id="colMateria" prefWidth="156.00006103515625" text="Materia"/>
            <TableColumn fx:id="colCurso" prefWidth="60.66668701171875" text="Curso"/>
            <TableColumn fx:id="colGrado" prefWidth="61.99993896484375" text="Grado"/>
            <TableColumn fx:id="colDia" prefWidth="84.0" text="Día"/>
            <TableColumn fx:id="colHora" prefWidth="94.666748046875" text="Hora"/>
        </columns>
    </TableView>
    <HBox layoutX="813.0" layoutY="32.0" prefHeight="25.0" prefWidth="225.0">
        <children>
            <Button fx:id="btbAgregar" mnemonicParsing="false" onAction="#agregarHorario" text="Agregar">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarMateriaHorario" text="Eliminar">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#limpiarCampos" text="Limpiar">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</AnchorPane>
