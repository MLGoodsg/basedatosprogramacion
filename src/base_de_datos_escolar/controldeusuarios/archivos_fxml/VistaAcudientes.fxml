<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1377.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="base_de_datos_escolar.controldeusuarios.clasesController.AcudienteController">
    <children>
        <!-- Título -->
        <Label layoutX="31.0" layoutY="22.0" text="Acudientes">
            <font>
                <Font name="Raleway Bold" size="36.0" />
            </font>
        </Label>

        <VBox layoutX="14.0" layoutY="75.0" prefHeight="472.0" prefWidth="1078.0" spacing="10.0" AnchorPane.bottomAnchor="93.66666666666663" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="325.33333333333326" AnchorPane.topAnchor="75.0">
            <!-- Barra de herramientas -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
               <Label prefHeight="20.0" prefWidth="165.0" styleClass="dashboard_button" stylesheets="@../../dashboard/panel%20de%20colores.css" text="Filtrar por Institución">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                    <ComboBox fx:id="comboInstituciones" prefWidth="200.0" promptText="Instituciónes" styleClass="contadorEscuela" stylesheets="@../../dashboard/panel%20de%20colores.css" />
               <Region prefHeight="25.0" prefWidth="36.0" />
               <Label prefHeight="20.0" prefWidth="70.0" styleClass="dashboard_button" stylesheets="@../../dashboard/panel%20de%20colores.css" text="Buscar:">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                    <TextField fx:id="txtBuscar" prefWidth="200.0" promptText="Buscar..." styleClass="contadorEstudiantes" stylesheets="@../../dashboard/panel%20de%20colores.css" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#actualizarDatos" text="Actualizar" />
                    <Button fx:id="btnAgregar" onAction="#agregarAcudiente" text="Agregar" />
                    <Button fx:id="btnEditar" onAction="#editarAcudiente" text="Editar" />
                    <Button fx:id="btnEliminar" onAction="#eliminarAcudiente" text="Eliminar" />
                </children>
            </HBox>

            <!-- Tabla de Acudientes -->
            <TableView fx:id="tableViewAcudientes" prefHeight="235.0" prefWidth="1078.0" styleClass="contadorPadresLine" stylesheets="@../../dashboard/panel%20de%20colores.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                    <TableColumn fx:id="colApellido" prefWidth="120.0" text="Apellido" />
                    <TableColumn fx:id="colCedula" prefWidth="100.0" text="Cédula" />
                    <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                    <TableColumn fx:id="colParentesco" prefWidth="100.0" text="Parentesco" />
                    <TableColumn fx:id="colAcudido" prefWidth="150.0" text="Estudiante Acudido" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Label oculto para ID de usuario -->
        <Label fx:id="lblIdUsuario" visible="false" />
    </children>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</AnchorPane>
